<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.example.believe.text02.CalculatorActivity">
    <LinearLayout
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="我的计算器"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <EditText
        android:id="@+id/edit_input"
        android:enabled="false"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:gravity="right|bottom"
        android:background="@drawable/white_bg"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
    <!--第一行-->
    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/but_c"
            android:text="C"
            android:background="@drawable/white_selector"
            android:textSize="20sp"
            android:paddingRight="5dp"
            android:gravity="bottom|right"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/but_del"
            android:text="DEL"
            android:paddingRight="5dp"
            android:background="@drawable/white_selector"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:gravity="bottom|right"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/but_chu"
            android:text="÷"
            android:background="@drawable/white_selector"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:paddingRight="5dp"
            android:gravity="bottom|right"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/but_cheng"
            android:text="×"
            android:background="@drawable/white_selector"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:paddingRight="5dp"
            android:gravity="bottom|right"
            android:layout_width="60dp"
            android:layout_height="60dp" />
    </LinearLayout>
    <!--第二行-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/but_7"
            android:text="7"
            android:paddingRight="5dp"
            android:background="@drawable/white_selector"
            android:textSize="20sp"
            android:gravity="bottom|right"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/but_8"
            android:text="8"
            android:paddingRight="5dp"
            android:background="@drawable/white_selector"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:gravity="bottom|right"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/but_9"
            android:text="9"
            android:background="@drawable/white_selector"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:paddingRight="5dp"
            android:gravity="bottom|right"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/but_jian"
            android:text="-"
            android:background="@drawable/white_selector"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:paddingRight="5dp"
            android:gravity="bottom|right"
            android:layout_width="60dp"
            android:layout_height="60dp" />
    </LinearLayout>
    <!--第三行-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/but_4"
            android:text="4"
            android:paddingRight="5dp"
            android:background="@drawable/white_selector"
            android:textSize="20sp"
            android:gravity="bottom|right"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/but_5"
            android:text="5"
            android:paddingRight="5dp"
            android:background="@drawable/white_selector"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:gravity="bottom|right"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/but_6"
            android:text="6"
            android:paddingRight="5dp"
            android:background="@drawable/white_selector"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:gravity="bottom|right"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/but_jia"
            android:text="+"
            android:background="@drawable/white_selector"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:paddingRight="5dp"
            android:gravity="bottom|right"
            android:layout_width="60dp"
            android:layout_height="60dp" />
    </LinearLayout>
    <!--第四/五行-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/but_1"
                    android:text="1"
                    android:paddingRight="5dp"
                    android:background="@drawable/white_selector"
                    android:textSize="20sp"
                    android:gravity="bottom|right"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <Button
                    android:id="@+id/but_2"
                    android:text="2"
                    android:paddingRight="5dp"
                    android:background="@drawable/white_selector"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    android:gravity="bottom|right"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <Button
                    android:id="@+id/but_3"
                    android:text="3"
                    android:paddingRight="5dp"
                    android:background="@drawable/white_selector"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    android:gravity="bottom|right"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/but_0"
                    android:text="0"
                    android:paddingRight="5dp"
                    android:background="@drawable/white_selector"
                    android:textSize="20sp"
                    android:gravity="bottom|right"
                    android:layout_width="130dp"
                    android:layout_height="60dp" />
                <Button
                    android:id="@+id/but_dian"
                    android:text="."
                    android:paddingRight="5dp"
                    android:background="@drawable/white_selector"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    android:gravity="bottom|right"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/but_equal"
                android:text="="
                android:paddingRight="5dp"
                android:background="@drawable/orange_selector"
                android:textSize="25sp"
                android:gravity="bottom|right"
                android:layout_width="60dp"
                android:layout_height="130dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
